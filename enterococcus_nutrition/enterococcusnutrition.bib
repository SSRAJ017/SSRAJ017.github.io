doi = {10.1093/cid/cis580},
file = {:Users/rajs/Documents/Mendeley Desktop/2012/Clinical Infectious Diseases/Taur et al. - 2012 - Clinical Infectious Diseases - Intestinal domination and the risk of bacteremia in patients undergoing allogeneic h.pdf:pdf},
