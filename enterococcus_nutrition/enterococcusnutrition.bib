issn = {15537374},
journal = {PLoS Pathogens},
number = {9},
pages = {1--20},
pmid = {26334306},
title = {{Distinct but Spatially Overlapping Intestinal Niches for Vancomycin-Resistant Enterococcus faecium and Carbapenem-Resistant Klebsiella pneumoniae}},
